{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "buildCommand": "npm run build"
    },
    "deploy": {
        "startCommand": "npm run start:prod",
        "healthcheckPath": "/health",
        "healthcheckTimeout": 3000,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 1
    }
}