<form>
  <!-- Basic Details -->
  <fieldset>
    <legend>Basic Details</legend>
    <div class="form-group">
      <label for="Date">Date:</label>
      <input type="date" name="Date" id="Date" placeholder="Enter the Date!" />

      <label for="Sir_name">Sir Name:</label>
      <input
        type="text"
        name="Sir_name"
        id="Sir_name"
        placeholder="Enter the Sir Name!"
      />

      <label for="Party_name">Party Name:</label>
      <input
        type="text"
        name="Party_name"
        id="Party_name"
        placeholder="Enter the Party Name!"
      />
    </div>
  </fieldset>

  <!-- Truck & Locations -->
  <fieldset>
    <legend>Truck & Locations</legend>
    <div class="form-group">
      <label for="Truck_number">Truck Number:</label>
      <input
        type="text"
        name="Truck_number"
        id="Truck_number"
        placeholder="Enter the Truck Number!"
      />

      <label for="Pickup_location">From (Pickup Location):</label>
      <input
        type="text"
        name="Pickup_location"
        id="Pickup_location"
        placeholder="Enter the Pickup Location!"
      />

      <label for="Drop_location">To (Drop Location):</label>
      <input
        type="text"
        name="Drop_location"
        id="Drop_location"
        placeholder="Enter the Drop Location!"
      />

      <label for="Unloading_point">Unloading Point:</label>
      <input
        type="text"
        name="Unloading_point"
        id="Unloading_point"
        placeholder="Enter the Unloading Point!"
      />
    </div>
  </fieldset>

  <!-- Payment & Load Details -->
  <fieldset>
    <legend>Payment & Load Details</legend>
    <div class="form-group">
      <label for="Fixed_rate">Fixed Rate:</label>
      <input
        type="text"
        name="Fixed_rate"
        id="Fixed_rate"
        placeholder="Enter the Fixed Rate!"
      />

      <label for="Advance_wage">Advance Wage:</label>
      <input
        type="number"
        name="Advance_wage"
        id="Advance_wage"
        placeholder="Enter the Advance Wage!"
      />

      <label for="Load">Load:</label>
      <input type="text" name="Load" id="Load" placeholder="Enter the Load!" />

      <label for="Payment_location">Balance:</label>
      <input
        type="text"
        name="Payment_location"
        id="Payment_location"
        placeholder="Enter the Balance Amount!"
      />
    </div>
  </fieldset>

  <!-- Remarks -->
  <fieldset>
    <legend>Remarks</legend>
    <div class="form-group">
      <label for="Remarks">Remarks:</label>
      <textarea
        name="Remarks"
        id="Remarks"
        cols="30"
        rows="4"
        placeholder="Enter Remarks"
      ></textarea>
    </div>
  </fieldset>

  <!-- Buttons -->
  <div class="form-group">
    <button type="submit" id="generate_btn">Generate Document</button>
    <button type="reset" id="reset_btn">Reset</button>
  </div>
</form>
