<form>
  <!-- Truck Details -->
  <fieldset>
    <legend>Truck Details</legend>
    <div class="form-group">
      <label for="Memo_number">Memo Number:</label>
      <input
        type="number"
        name="Memo_number"
        id="Memo_number"
        placeholder="Enter Memo Number"
      />

      <label for="Truck_number">Truck Number:</label>
      <input
        type="text"
        name="Truck_number"
        id="Truck_number"
        placeholder="Enter Truck Number"
      />

      <label for="Inserted_date">Date:</label>
      <input type="date" name="Inserted_date" id="Inserted_date" />
    </div>
  </fieldset>

  <!-- Locations -->
  <fieldset>
    <legend>Locations</legend>
    <div class="form-group">
      <label for="Pickup_location">Pickup Location:</label>
      <input
        type="text"
        name="Pickup_location"
        id="Pickup_location"
        placeholder="Enter Pickup Location"
      />

      <label for="Drop_location">Drop Location:</label>
      <input
        type="text"
        name="Drop_location"
        id="Drop_location"
        placeholder="Enter Drop Location"
      />

      <label for="Payment_location">Payment Location:</label>
      <input
        type="text"
        name="Payment_location"
        id="Payment_location"
        placeholder="Enter Payment Location"
      />
    </div>
  </fieldset>

  <!-- Driver & Owner Details -->
  <fieldset>
    <legend>Driver & Owner Details</legend>
    <div class="form-group">
      <label for="Driver_name">Driver Name:</label>
      <input
        type="text"
        name="Driver_name"
        id="Driver_name"
        placeholder="Enter Driver Name"
      />

      <label for="Owner_name">Owner Name:</label>
      <input
        type="text"
        name="Owner_name"
        id="Owner_name"
        placeholder="Enter Owner Name"
      />

      <label for="Owner_address">Owner Address:</label>
      <input
        type="text"
        name="Owner_address"
        id="Owner_address"
        placeholder="Enter Owner Address"
      />

      <label for="Owner_number">Owner Number:</label>
      <input
        type="tel"
        name="Owner_number"
        id="Owner_number"
        placeholder="Enter Owner Number"
      />
    </div>
  </fieldset>

  <!-- Shipment Details -->
  <fieldset>
    <legend>Shipment Details</legend>
    <div class="form-group">
      <label for="Consignor">Consignor:</label>
      <input
        type="text"
        name="Consignor"
        id="Consignor"
        placeholder="Enter Consignor Name"
      />

      <label for="Consignee">Consignee:</label>
      <input
        type="text"
        name="Consignee"
        id="Consignee"
        placeholder="Enter Consignee Name"
      />

      <label for="Particulars">Particulars:</label>
      <input
        type="text"
        name="Particulars"
        id="Particulars"
        placeholder="Enter Shipment Particulars"
      />

      <label for="Weight">Weight:</label>
      <input type="text" name="Weight" id="Weight" placeholder="Enter Weight" />
    </div>
  </fieldset>

  <!-- Financial Details -->
  <fieldset>
    <legend>Financial Details</legend>
    <div class="form-group">
      <label for="Total_collection">Total Collection:</label>
      <input
        type="number"
        name="Total_collection"
        id="Total_collection"
        placeholder="Enter Total Collection"
      />

      <label for="Height_charge">Height Freight Fix:</label>
      <input
        type="number"
        name="Height_charge"
        id="Height_charge"
        placeholder="Enter Height Charge"
      />

      <label for="Height_freight">Extra Freight:</label>
      <input
        type="number"
        name="Height_freight"
        id="Height_freight"
        placeholder="Enter Extra Freight"
      />

      <label for="Workout">Per Ton Workout Rs:</label>
      <input
        type="number"
        name="Workout"
        id="Workout"
        placeholder="Enter Per Ton Workout Rs"
      />

      <label for="Advance">Advance Rs:</label>
      <input
        type="number"
        name="Advance"
        id="Advance"
        placeholder="Enter Advance Rs"
      />

      <label for="Commission">Commission:</label>
      <input
        type="number"
        name="Commission"
        id="Commission"
        placeholder="Enter Commission"
      />

      <label for="Tapal">Hamali & Tapal:</label>
      <input
        type="number"
        name="Tapal"
        id="Tapal"
        placeholder="Enter Tapal Amount"
      />

      <label for="Weight_wage">Weight Wage:</label>
      <input
        type="number"
        name="Weight_wage"
        id="Weight_wage"
        placeholder="Enter Weight Wage"
      />

      <label for="Guide_rupees">Guide / L Drive:</label>
      <input
        type="number"
        name="Guide_rupees"
        id="Guide_rupees"
        placeholder="Enter Guide Wage"
      />

      <label for="Other_expenses">Other charges:</label>
      <input
        type="number"
        name="Other_expenses"
        id="Other_expenses"
        placeholder="Enter Other Charges"
      />
    </div>
  </fieldset>

  <!-- Remarks -->
  <fieldset>
    <legend>Remarks</legend>
    <div class="form-group">
      <label for="Remarks">Remarks:</label>
      <textarea
        name="Remarks"
        id="Remarks"
        cols="30"
        rows="4"
        placeholder="Enter Remarks"
      ></textarea>
    </div>
  </fieldset>

  <!-- Buttons -->
  <div class="form-group">
    <button type="submit" id="generate_btn">Generate Document</button>
    <button type="reset" id="reset_btn">Reset</button>
  </div>
</form>
